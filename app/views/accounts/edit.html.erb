<%= form_with(model: @account, local: true) do |form| %>

  <div class="title">
    <div class="form-tag">タイトル</div>
    <%= form.text_field :title %>
  </div>


  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :content %>
  </div>

    <div class="time">
    <div class="form-tag">時間</div>
    <%= form.date_select :start_time %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to '戻る', "/" %>



<div class="col-md-8">
<%= month_calendar events: @accounts do |date, accounts| %>
  <%= date.day %>

  <% accounts.each do |account| %>
    <div>
      <%= account.title%><h>：</h>
      <%= account.content.to_s(:delimited)%><h>円</h>

    </div>
  <% end %>
<% end %>
</div>