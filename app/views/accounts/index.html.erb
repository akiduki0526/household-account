


<div class="toppage">
<div class ="top-up">


   <h1 class="top">Household account
    <div class ="user">
    <%= link_to 'ログイン', "/", class: "login" %></li>
    <%= link_to 'ログアウト', "/", class: "login" %></li>
    <%= link_to '新規登録', "/", class: "sign-up" %></li>
    </div>
   </h1>
</div>
<br>

<div class="row">
<div class="col-md-4">
	


<%= form_with model:@account, local: true do |form| %>

  <div class="title">
    <h class="form-tag">タイトル</h>
    <%= form.text_field :title %>
  </div>


  <div class="content">
    <h class="form-tag">金額</h>
    <%= form.text_field :content %>
  </div>

  <div class="time">
    <h class="form-tag">日付</h>
    <%= form.date_select :start_time %>
  </div>

 <div class="submit">
    <%= form.submit %>
 </div>
<% end %>


</div>

<br>


<br>
<div class="col-md-8">
<%= month_calendar events: @accounts do |date, accounts| %>
  <%= date.day %>

  <% accounts.each do |account| %>
    <div>
      <%= link_to account.title, account_path(account.id) %><h>：</h>
      <%= link_to account.content.to_s(:delimited), account_path(account.id) %><h>円</h>

    </div>
  <% end %>
<% end %>
</div>
</div>
</div>

<div class="last">Household account</div>